!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title WalletManagement
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all'
    %link{rel: 'stylesheet', media: 'all', href: 'https://cdnjs.cloudflare.com/ajax/libs/jquery.tablesorter/2.31.3/css/theme.default.min.css'}
    %link{rel: 'stylesheet', media: 'all', href: 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css'}
    %link{rel: 'stylesheet', media: 'all', href: 'https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css'}
    = javascript_pack_tag 'application'
    %script{src: 'https://code.jquery.com/jquery-2.2.4.min.js'}
    %script{src: 'https://cdnjs.cloudflare.com/ajax/libs/jquery-ujs/1.2.3/rails.min.js'}
    %script{src: 'https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js'}
    %script{src: 'https://cdnjs.cloudflare.com/ajax/libs/jquery.tablesorter/2.31.3/js/jquery.tablesorter.min.js'}
    %script{src: 'https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js'}
    = favicon_link_tag asset_path('favicon.ico')

  %body
    %header.mb-5
      .navbar.navbar-dark.bg-dark.shadow-sm
        .container.d-flex.justify-content-between
          %a.navbar-brand.d-flex.align-items-center{:href => root_path}
            %strong{style: 'font-family: monospace;'} Wallets
          - if user_signed_in?
            %span{style: 'color: white'}
              = current_user.email
            = link_to destroy_user_session_path, method: :delete, style: 'color: white; font-size: 20px;' do
              %i.fa.fa-sign-out

    %main{:role => "main"}
      %section.jumbotron
        .container.mb-5
          = yield

:javascript
  $(function() {
    $('table').tablesorter()
  })

:css
  .tablesorter-default {
    font-size: 16px;
    font-family: system-ui;
  }
  .tablesorter-default td {
    padding: 0.7rem 0.7rem;
  }
  .tablesorter-default th {
    padding: 0.7rem 0.7rem !important;
    border-bottom: #000 2px solid;
  }

  .select2-container {
    margin-bottom: 6px;
  }
  .select2-container--default .select2-selection--single .select2-selection__rendered {
    line-height: 28px;
  }
  .select2-container .select2-selection--single .select2-selection__rendered {
    padding-left: 0;
    line-height: 1.5;
  }
  .select2-container--default .select2-selection--single {
    height: 37px;
    padding: 6px 12px;
    box-shadow: inset 0 2px 0 rgb(0 0 0 / 8%);
    border: 1px solid #ced4da;
  }
  .select2-container--default .select2-selection--single .select2-selection__arrow {
    height: 34px;
  }
